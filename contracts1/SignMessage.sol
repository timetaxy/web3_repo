contract SignMessage is Ownable, Pausable {
    event Sign(string text, bytes32 hashedMessage);
    event Recover(bytes32 text, bytes32 hashedMessage, address signer);
    event Text(bytes32 message);
    event Data(address signer);
    event FourBytes(bytes result);
    
    function getHashedMessage(string memory text) public returns(bytes32) {
        bytes32 message = keccak256(abi.encodePacked(text));
        bytes32 hash = ECDSA.toEthSignedMessageHash(message);
        emit Sign(text, hash);
        return hash;
    }
    
    function recover(bytes32 text, bytes memory signature) public returns(address) {
        bytes32 message = keccak256(abi.encodePacked(text));
        bytes32 hash = ECDSA.toEthSignedMessageHash(message);
        address signer = ECDSA.recover(hash, signature);
        // require(signer == this.owner(), 'Invalid Signature');
        emit Recover(text, hash, signer);
        return signer;
    }
    
    function recover2(address token, address recipient, uint256 amount, uint256 txId, bytes32 txHash, uint target_chain, bytes calldata signature) external returns(address) {
        bytes32 message = keccak256(abi.encodePacked(
            address(token),
            txHash,
            recipient,
            txId,
            amount,
            target_chain
        ));
        bytes32 hash = ECDSA.toEthSignedMessageHash(message);
        address signer = ECDSA.recover(hash, signature);
        emit Data(signer);
        return signer;
    }

    function split4FirstBytes(bytes memory data) public returns(bytes memory) {
        bytes memory result = new bytes(4);
        for (uint i = 0; i < 3; i++) {
            result[i] = data[i];
        }
        emit FourBytes(result);
        return result;
    }
}